<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" size="400 244" type="VANILLA"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/1.20.1/src/main/resources/assets/blockui/gui/block_ui.xsd">
    <image source="slimcolonies:textures/gui/builderhut/builder_paper_wide2.png" size="400 244"/>

    <button id="cancel" size="14 15" pos="375 10" source="slimcolonies:textures/gui/button_x.png" color="black"/>

    <text id="warningtext" size="260 120" color="black" pos="70 15" textscale="1" textalign="MIDDLE"/>

    <button id="pickup" size="129 17" pos="70 150" color="black"
                 source="slimcolonies:textures/gui/builderhut/builder_button_medium_large.png"
                 disabled="slimcolonies:textures/gui/builderhut/builder_button_medium_large_disabled.png"
                 label="$(com.minecolonies.core.founding.pickup)"/>

    <button id="delete" size="129 17" pos="200 150" color="black"
                 source="slimcolonies:textures/gui/builderhut/builder_button_medium_large.png"
                 disabled="slimcolonies:textures/gui/builderhut/builder_button_medium_large_disabled.png"
                 label="$(com.minecolonies.core.founding.delete)"/>

    <button id="abandon" size="129 17" pos="130 180" color="black"
                 source="slimcolonies:textures/gui/builderhut/builder_button_medium_large.png"
                 disabled="slimcolonies:textures/gui/builderhut/builder_button_medium_large_disabled.png"
                 label="$(com.minecolonies.core.founding.abandon)"/>


    <image id="dialog" source="slimcolonies:textures/gui/dialog.png" size="256 180" pos="72 35" visible="false"/>

    <text id="confirmtext" size="200 120" color="black" pos="100 30" textscale="1" textalign="MIDDLE" hide="true" visible="false"/>

    <button id="confirmdelete" size="86 17" pos="110 160" color="black"
                 source="slimcolonies:textures/gui/builderhut/builder_button_medium.png"
                 label="$(com.minecolonies.core.gui.colony.delete.confirm)" visible="false"/>

    <button id="confirmabandon" size="86 17" pos="110 160" color="black"
                 source="slimcolonies:textures/gui/builderhut/builder_button_medium.png"
                 label="$(com.minecolonies.core.gui.colony.abandon.confirm)" visible="false"/>

    <button id="cancelaction" size="86 17" pos="210 160" color="black"
                 source="slimcolonies:textures/gui/builderhut/builder_button_medium.png"
                 label="$(com.minecolonies.core.gui.colony.manage.cancel)" visible="false"/>
</window>
