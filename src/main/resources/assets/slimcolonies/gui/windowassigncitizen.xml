<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/1.20.1/src/main/resources/assets/blockui/gui/block_ui.xsd"
>
    <image source="slimcolonies:textures/gui/builderhut/builder_paper_wide2.png" size="400 244"/>

    <text size="100% 11" pos="0 20" textalign="MIDDLE" color="black" label="$(no.monopixel.slimcolonies.coremod.gui.assigning.description)"/>

    <list id="assigned" size="190 160" pos="10 40">
        <view size="100% 34">
            <gradient gradientstart="430265344" gradientend="430265344" size="100% 100%"/>
            <text id="citizen" size="100% 12" pos="5 2" color="blue"/>
            <button id="fire" size="44 10" pos="120 2" color="black"
                    source="slimcolonies:textures/gui/builderhut/builder_button_quite_small.png"
                    label="$(no.monopixel.slimcolonies.coremod.gui.hiring.buttonfire)" textscale="0.8"/>

            <text id="job" size="175 20" pos="5 13" color="black" textalign="TOP_LEFT"/>
        </view>
    </list>

    <list id="unassigned" size="190 160" pos="201 40">
        <view size="100% 34">
            <gradient gradientstart="430265344" gradientend="430265344" size="100% 100%"/>
            <text id="citizen" size="100% 12" pos="5 2" color="blue"/>
            <button id="hire" size="44 10" pos="120 2" color="black"
                    source="slimcolonies:textures/gui/builderhut/builder_button_quite_small.png"
                    label="$(no.monopixel.slimcolonies.coremod.gui.hiring.buttonassign)" textscale="0.8"/>

            <text id="job" size="175 20" pos="5 13" color="black" textscale="0.8"/>
        </view>
    </list>

    <text id="buildingassignmentmode" size="200 11" pos="40 210" color="black" label="$(no.monopixel.slimcolonies.coremod.gui.buildingassignmentmode)"/>
    <button id="mode" size="169 17" pos="170 207" color="black"
            source="slimcolonies:textures/gui/builderhut/builder_button_large.png"/>

    <button id="cancel" size="14 15" pos="375 10"
            source="slimcolonies:textures/gui/button_x.png" color="black"/>
</window>
