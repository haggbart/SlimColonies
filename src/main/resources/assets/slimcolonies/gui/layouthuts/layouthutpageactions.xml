>
    <layout source="slimcolonies:gui/layouthuts/layouthutpageactionsmin.xml"/>

    <text size="164 11" pos="13 32" textalign="MIDDLE" color="black"
          label="$(no.monopixel.slimcolonies.coremod.gui.workerhuts.workerassigned)"/>

    <list id="workers" size="164 30" pos="13 43">
        <view size="100% 11">
            <box size="100% 11" linewidth="0">
                <text id="workerName" size="100% 11" pos="0 0" textalign="MIDDLE" color="black"/>
            </box>
        </view>
    </list>

    <button id="hire" size="129 17" pos="30 74" color="black"
