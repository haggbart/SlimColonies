<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/1.20.1/src/main/resources/assets/blockui/gui/block_ui.xsd"
        size="190 244">
    <image source="slimcolonies:textures/gui/builderhut/builder_paper.png" size="190 244"/>
    <text size="130 11" pos="30 14" textalign="MIDDLE" color="black"
          label="$(no.monopixel.slimcolonies.core.gui.modules.stats)"/>
    <view size="200 243" pos="0 0">
        <dropdown id="intervals"
                  size="129 17"
                  pos="30 30"
                  maxContentHeight="75"
                  dropDownSize="140 75"
                  source="slimcolonies:textures/gui/builderhut/builder_button_medium_large.png"
                  color="black">
            <button id="button" size="129 17" pos="0 0" source="slimcolonies:textures/gui/builderhut/builder_button_medium_large.png" color="black"
                    label="$(no.monopixel.slimcolonies.coremod.gui.interval.yesterday)"/>
        </dropdown>
        <list id="stats" size="160 175" pos="20 55" emptytext="$(no.monopixel.slimcolonies.core.gui.modules.stats.empty)" emptycolor="black">
            <text id="desc" size="160 13" pos="0 0" color="black" wrap="true"/>
        </list>
    </view>
</window>
