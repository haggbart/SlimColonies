<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/1.20.1/src/main/resources/assets/blockui/gui/block_ui.xsd"
        lightbox="true">
    <text size="100% 11" pos="0 25" textalign="TOP_MIDDLE" color="white"
           label="$(com.minecolonies.coremod.gui.scan.select.title)"/>

    <input id="name" size="150 18" pos="135 40" maxlength="25"/>

    <itemicon id="resourceIcon" size="17 17" pos="70 1"/>
    <text id="resourceName" size="140 12" pos="100 4" color="white"/>

    <input id="qty" size="25 14" pos="200 2" maxlength="25"/>
    <text id="qtylabel" label="$(com.minecolonies.coremod.gui.scan.select.stack)" size="50 12" pos="235 4"/>

    <list id="resources" size="300 120" pos="60 65">
        <box size="100% 17" linewidth="1">
            <itemicon id="resourceIcon" size="17 17" pos="1 1"/>
            <text id="resourceName" size="140 12" pos="30 1" color="white"/>
            <button label="$(com.minecolonies.coremod.gui.scantool.select)" id="select" pos="160 1" size="86 17"
                         source="minecolonies:textures/gui/builderhut/builder_button_medium.png" color="black"/>
        </box>
    </list>

    <button id="done" source="minecolonies:textures/gui/buildtool/confirm.png" size="32" pos="125 185"/>
    <button id="cancel" source="minecolonies:textures/gui/buildtool/cancel.png" size="32" pos="215 185"/>
</window>
